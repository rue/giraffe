<div id="section_info">
  <h1>History of <a href="/<%= @page.uri %>"><%= @page.name %></a></h1>
</div>

<div id="page_history">

  <div class="sidebar">
    <ul class="sub_nav">
      <li><a href="/<%= @page.name %>" class="nav_link">current</a></li>
      <li><a href="/e/<%= @page.name %>" class="nav_link">edit</a></li>
    </ul>
  </div>

  <div class="content">
    <ul class="commits">
      <% @commits.each do |commit| %>
        <li class="commit">
          <a href="/h/<%= @page.uri %>/<%= commit.sha1 %>" title="View revision <%= commit.sha1 %>">
            <%= commit.subject %>
          </a>
          <% unless commit == @commits.first %>
            <a href="/d/<%= @page.uri %>/<%= commit.sha1 %>">diff</a>
          <% end %>
          <script type="text/javascript">
            document.write(time_ago_in_words(<%= commit.time.for_time_ago_in_words %>) + ' ago');
          </script>
        </li>
      <% end %>
    </ul>
  </div>

</div>
